{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",   // ← bundler, NOT classic
    "resolveJsonModule": true,       // ← now allowed
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": false,                 // relax while migrating
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"]
  },
  "include": ["src", "src/**/*.module.css"],
  "exclude": ["node_modules", "dist"]
}